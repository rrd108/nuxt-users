{
  "name": "nuxt-users",
  "version": "1.1.3",
  "description": "Nuxt users module",
  "repository": "rrd108/nuxt-users",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types.d.mts",
      "import": "./dist/module.mjs"
    }
  },
  "main": "./dist/module.mjs",
  "typesVersions": {
    "*": {
      ".": [
        "./dist/types.d.mts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "bin": {
    "nuxt-users": "./dist/cli.mjs"
  },
  "unbuild": {
    "entries": [
      "./src/module",
      {
        "builder": "rollup",
        "input": "./src/cli/main",
        "name": "cli",
        "ext": "mjs"
      }
    ],
    "declaration": true,
    "clean": true,
    "failOnWarn": false
  },
  "scripts": {
    "prepack": "nuxt-module-build build",
    "postinstall": "node -e \"try { require('fs').chmodSync('./dist/cli.mjs', '755') } catch(e) {}\"",
    "predev": "node -v | grep -q 'v22' || (echo 'Please use Node.js v22 for deployment' && exit 1)",
    "dev": "yarn dev:prepare && nuxi dev playground",
    "dev:build": "nuxi build playground",
    "dev:prepare": "yarn nuxt-module-build build --stub && yarn nuxt-module-build prepare && nuxi prepare playground",
    "prerelease": "node -v | grep -q 'v22' || (echo 'Please use Node.js v22 for deployment' && exit 1)",
    "release": "yarn lint && yarn test && yarn prepack && changelogen --release && yarn publish && git push --follow-tags",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "pretest": "node -v | grep -q 'v22' || (echo 'Please use Node.js v22 for deployment' && exit 1)",
    "test": "yarn test:types && yarn test:sqlite && yarn test:mysql && yarn test:postgresql",
    "test:watch": "vitest watch",
    "test:sqlite": "./scripts/test-sqlite.sh",
    "test:mysql": "./scripts/test-mysql.sh",
    "test:postgresql": "./scripts/test-postgresql.sh",
    "test:types": "vue-tsc --noEmit && cd playground && vue-tsc --noEmit",
    "db:create-users-table": "tsx src/cli/create-users-table.ts",
    "db:create-user": "tsx src/cli/create-user.ts",
    "db:create-personal-access-tokens-table": "tsx src/cli/create-personal-access-tokens-table.ts",
    "db:create-password-reset-tokens-table": "tsx src/cli/create-password-reset-tokens-table.ts",
    "db:create-migrations-table": "tsx src/cli/create-migrations-table.ts",
    "db:migrate": "tsx src/cli/migrate.ts",
    "db:create-empty-sqlite": "node scripts/create-empty-sqlite.js",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:deploy": "yarn docs:build && ./scripts/deploy-docs.sh"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.2.0",
    "citty": "^0.1.6",
    "defu": "^6.1.4",
    "mysql2": "^3.14.2",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3"
  },
  "peerDependencies": {
    "@nuxt/kit": "^3.17.6"
  },
  "devDependencies": {
    "@formkit/nuxt": "^1.6.9",
    "@nuxt/devtools": "^2.6.2",
    "@nuxt/eslint-config": "^1.5.2",
    "@nuxt/kit": "^3.17.6",
    "@nuxt/module-builder": "^1.0.1",
    "@nuxt/schema": "^3.17.6",
    "@nuxt/test-utils": "^3.19.2",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "latest",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.4",
    "changelogen": "^0.6.2",
    "eslint": "^9.30.1",
    "nuxt": "^3.17.6",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "unbuild": "^2.0.0",
    "vitepress": "^1.6.3",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.1"
  }
}
